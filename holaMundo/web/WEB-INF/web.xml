    <servlet>
        <servlet-name>servletHolaMundo</servlet-name>
        <servlet-class>Servlet.servletHolaMundo</servlet-class>
    </servlet>
    <!--Mapeo del servlet-->
    <servlet-mapping>
        <servlet-name>servletHolaMundo</servlet-name>
        <url-pattern>/servletHolaMundo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
